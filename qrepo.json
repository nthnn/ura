{
    "name": "ura",
    "author": "nathannestein",
    "version": "v0.0.1",
    "description": "Decentralized banking system",
    "git": "https://github.com/nthnn/ura",
    "scripts": {
        "build": [
            "qrepo run clean",
            "qrepo run build-server",
            "qrepo run build-site",
            "qrepo run zip",
            "qrepo run clean"
        ],
        "build-server": [
            "mkdir -p dist",
            "cd server",
            "go build -ldflags \"-s -w\" -o ../dist/ura github.com/nthnn/ura",
            "cp -r ../public ../dist/",
            "cd .."
        ],
        "build-site": [
            "mkdir -p dist/public/asm",
            "mkdir -p dist/public/scripts",
            "mkdir -p dist/public/styles",
            "cd client/index",
            "GOOS=js GOARCH=wasm go build -o ../../dist/public/asm/index.wasm .",
            "cd ../dashboard",
            "GOOS=js GOARCH=wasm go build -o ../../dist/public/asm/dashboard.wasm .",
            "cd ../..",
            "cp assets/ura-icon.ico dist/public/favicon.ico",
            "cp $(go env GOROOT)/misc/wasm/wasm_exec.js dist/public/scripts/"
        ],
        "dev": [
            "qrepo run build-server",
            "qrepo run build-site",
            "cd dist",
            "./ura"
        ],
        "run": [
            "rm -rf dist",
            "qrepo run dev"
        ],
        "zip": [
            "cd dist",
            "zip -rq ura.zip *",
            "cd .."
        ],
        "clean": [
            "rm -rf dist/public",
            "rm -f dist/ura",
            "rm -f dist/ura.s3db",
            "go clean -cache -modcache"
        ],
        "test": ["python test/api-test.py"]
    }
}
